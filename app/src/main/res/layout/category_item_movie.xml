<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="wrap_content"
    tools:background="#ffffff"
    android:clipChildren="false">

    <com.github.sablasvegas.shadout.Shadout
        android:id="@+id/category_item_glow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shadowColor="#ff0000"
        app:shadowRadius="20dp">

        <ImageView
            android:id="@+id/category_item_image"
            android:layout_width="260dp"
            android:layout_height="135dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_banner"
            android:background="#000000"
            android:importantForAccessibility="no" />

    </com.github.sablasvegas.shadout.Shadout>

    <TextView
        android:id="@+id/category_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        tools:textColor="#000000" />

</LinearLayout>